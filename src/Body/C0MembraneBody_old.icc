// //     dataStream.open(dataName.c_str());
// //     dataStream << energy << std::endl
// // 	       << curvature << std::endl;
// //     dataStream.close();

    std::string fileName = name + ".vtk";
    std::ofstream ofs(fileName.c_str());
//     ofs.open(fileName.c_str(), std::ios::out);
    if (!ofs) {
      std::cout << "can not open output ("
